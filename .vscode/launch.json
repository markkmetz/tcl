{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Build Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "npm: build",
      "outFiles": ["${workspaceFolder}/out/**/*.js"],
      "console": "integratedTerminal"
    }
  ]
}
